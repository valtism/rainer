{
  "name": "rainer",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/valtism/rainer.git",
  "author": "Dan Wood <daniel4wood@icloud.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn run tailwind:watch",
    "build": "yarn run tailwind",
    "tailwind:watch": "nodemon -w tailwind.config.js -w tailwind.src.css -x 'yarn run tailwind'",
    "tailwind": "tailwindcss build tailwind.src.css -o index.css"
  },
  "dependencies": {
    "nodemon": "^2.0.5",
    "tailwindcss": "^1.9.4"
  }
}
